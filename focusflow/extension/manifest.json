{
  "manifest_version": 3,
  "name": "Activity Tracker",
  "version": "1.0.0",
  "description": "Track time spent on sites, detect tab switches, and log activity data",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
